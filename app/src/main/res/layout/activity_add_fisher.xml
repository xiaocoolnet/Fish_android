<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height_50">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/tv_title_add_you"
            android:textColor="@color/title_bar_color"
            android:textSize="18sp" />
        <RelativeLayout
            android:layout_width="@dimen/title_bar_height_50"
            android:layout_height="fill_parent"
            android:gravity="center" >
            <ImageView
                android:id="@+id/btn_exit"
                android:layout_width="@dimen/left_arrow"
                android:layout_height="@dimen/left_arrow"
                android:contentDescription="@string/app_name"
                android:src="@drawable/left_arrow" />
        </RelativeLayout>
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="@dimen/fragmet_home_logo_size_5"
        android:hint="手机号搜索"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/fragmet_home_logo_size_5"
        android:layout_marginRight="@dimen/fragmet_home_logo_size_5">

        <RelativeLayout
            android:id="@+id/rl_add_fisher"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_click">
            <ImageView
                android:id="@+id/iv_add_fisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_logo_weather"
                android:layout_margin="@dimen/tv_margin_top_6.5"/>
            <TextView
                android:id="@+id/tv_add_fisher"
                android:layout_toRightOf="@id/iv_add_fisher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/fragmet_home_logo_size_8"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/fragmet_home_logo_size_15" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>